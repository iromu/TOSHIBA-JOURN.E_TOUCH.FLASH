import com.wantez.dto.VideoItem;/** Adaptador de xml a clases AS */class com.wantez.utils.XMLAdapter{	private var xml:XML;	/** Constructor */	public function XMLAdapter(xml:XML)	{		this.xml = new XML  ;		this.xml = xml;	}	public function length():Number	{		return this.xml.firstChild.childNodes.length;	}	public function toArray():Array	{		var elementos:Array = new Array  ;		switch (this.xml.firstChild.nodeName)		{			case "videos" :				for (var i = 0; i < this.xml.firstChild.childNodes.length; i++)				{					var video:VideoItem = new VideoItem  ;					//video.id = this.xml.firstChild.childNodes[i].attributes["id"];					//video.descripcion = this.xml.firstChild.childNodes[i].attributes["descripcion"];					video.path = this.xml.firstChild.childNodes[i].attributes["path"];					elementos[i] = video;				}				break;		}		return elementos;	}}